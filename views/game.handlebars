<div class="game">
	<div class="row1">
	{{#each range}}
		<input type="button" id="p2-{{this}}" value="#" disabled>
	{{/each}}
		<span id="player2_score"></span>
	</div>
	
	<div class="row2">
		<div class="col1">
		{{#each range}}
			<input type="button" id="p1-{{this}}" value="#" disabled>
		{{/each}}
			<span id="player1_score"></span>
		</div>

		<div class="col2">
			<input type="button" id="player3_card" value="" style='visibility:hidden'><br>
			<input type="button" id="player2_card" value="" style='visibility:hidden'><br>
			<input type="button" id="player1_card" value="" style='visibility:hidden'><br>
			<input type="button" id="player0_card" value="" style='visibility:hidden'><br>
			<input type="button" id="ok" onclick="next_trick();" value="OK">
		</div>

		<div class="col3">
		{{#each range}}
			<input type="button" id="p3-{{this}}" value="#" disabled>
		{{/each}}
			<span id="player3_score"></span>
		</div>
	</div>

	<div class="row3">
	{{#each player0_cards}}
		<input type="button" id="{{this}}" onclick="can_throw('{{this}}');" value="{{this}}">
	{{/each}}
		<span id="player0_score"></span>
	</div>
</div>
